@model IEnumerable<UsuarioModel>

<h3>@ViewData["Titulo"]</h3>

<form action="Index">
    @Html.ActionLink("Novo Usuário", "CadastrarUsuario", "Usuario", null, new { @class = "btn btn-info" })
    <hr />

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="text-align:center">Nome</th>
                <th style="text-align:center">Email</th>
                <th style="text-align:center">Senha</th>
                <th style="text-align:center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @Html.AntiForgeryToken()
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u => usuario.NomeDoUsuario)</td>
                    <td>@Html.DisplayFor(u => usuario.EmailDoUsuario)</td>
                    <td>@Html.DisplayFor(u => usuario.SenhaDoUsuario)</td>
                    <td>
                        @Html.ActionLink("Editar", "EditarUsuario", "Usuario", new { id = usuario.IdDoUsuario }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Excluir", "ExcluirUsuario", "Usuario", new { id = usuario.IdDoUsuario }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>